<h3><%= "List: #{@list.name.capitalize}" %></h3>
<% @items.each do |item| %>
  <table>
    <tr>
      <td><%= "- #{item.name.capitalize}" %></td>
      <td><%= " - #{item.quan.capitalize}" if item.quan %></td>
      <td><%= "- #{item.notes.capitalize}" if item.notes != "" %></td>
      <td><%= button_to 'Delete!', item_path(item), method: :delete, data: { confirm: 'Are you sure?'}%></td>      
    </tr>
  </table>
<% end %>

<br />
<br />

<h4>Add New Items To Your List!</h4>
<%= form_for @item do |f| %>
  <div class="field">
  <table>
    <tr>
      <td><%= f.label :name, "Item" %></td> 
      <td><%= f.label :quan, "Quantity" %></td>
    </tr>
    <tr>
      <td><%= f.text_field :name, placeholder: "Add an item" %></td>
      <td><%= f.text_field :quan, placeholder: "Enter Quantity" %></td>
    </tr>
    <tr>
      <td><%= f.label :notes, "Special Notes" %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.text_area :notes, placeholder: "Notes", :cols => 33 %></td>
    </tr>
  </table>
  </div>       
  <div class="actions">
    <%= f.submit("Add Item") %>
  </div>
  <%= f.hidden_field :list_id, value: @list.id %>
<% end %>